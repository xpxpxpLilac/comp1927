int multipleFour(int n) {
   int m = 0;
   if(n < 8) {
      m = 8;
   } else {
      int remain = n%4;
      if(remain == 0) {
          m = n;
      } else {
          m = (4-remain)+n;
      }
   }
   return m;
}





u_int32_t powerOfTwo(u_int32_t size) {
    
    int a = 1;
    while(a < size){
        a = a*2;
    }
    return a;
}
